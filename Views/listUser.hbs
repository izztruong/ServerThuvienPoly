<div>
  <div style="margin-top: 20px;">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">STT</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          <th scope="col">Sex</th>
          <th scope="col">Address</th>
        </tr>
      </thead>
      <tbody>
        {{#each user}}
          <tr>
            <th>{{sum @index 1}}</th>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.sex}}</td>
            <td>{{this.address}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>