<div class="container">
  <h2>Thêm Thành Viên</h2>
  <form
    method="POST"
    action="/Librarian/addLibrarian"
    autocomplete="off"
    enctype="multipart/form-data"
  >
    <div class="form-floating mb-3">
      <label for="name">Name: </label>
      <input
        type="text"
        class="form-control"
        required
        placeholder="Enter The Name: "
        name="name"
        style="border-color: #FC6011;"
      />

    </div>
    <div class="form-floating mb-3">
      <label for="sex">Sex: </label>
      <div class="form-check">
        <input
          class="form-check-input"
          type="radio"
          name="sex"
          id="flexRadioDefault1"
        />
        <label class="form-check-label" for="flexRadioDefault1">
          MALE
        </label>
      </div>
      <div class="form-check">
        <input
          class="form-check-input"
          type="radio"
          name="sex"
          id="flexRadioDefault2"
          checked
        />
        <label class="form-check-label" for="flexRadioDefault2">
          FEMALE
        </label>
      </div>

    </div>
    <div class="form-floating mb-3">
      <label for="birthday">Birthday: </label>
      <input
        type="text"
        class="form-control"
        name="birthday"
        required
        placeholder="Enter The Birthday: "
        style="border-radius: 10px;border-color: #FC6011;"
      />
    </div>
    <div class="form-floating mb-3">
      <label for="address">Address: </label>
      <input
        type="text"
        class="form-control"
        name="address"
        required
        placeholder="Enter The Address: "
        style="border-radius: 10px;border-color: #FC6011;"
      />

    </div>
    <div class="form-floating mb-3">
      <label for="phone">Phone: </label>
      <input
        type="text"
        class="form-control"
        required
        name="phone"
        placeholder="Enter The Phone"
        style="border-radius: 10px;border-color: #FC6011;"
      />

    </div>
    <div class="form-floating mb-3">
      <label for="email">Email: </label>
      <input
        type="text"
        class="form-control"
        required
        name="email"
        placeholder="name@example.com"
        style="border-radius: 10px;border-color: #FC6011;"
      />

    </div>
    <div class="form-floating mb-3">
      <label for="start">Day Start Word: </label>
      <input
        type="text"
        class="form-control"
        required
        placeholder="Enter The Day Start Word: "
        style="border-radius: 10px;border-color: #FC6011;"
        name="dateWork"
      />

    </div>
    <div class="form-floating">
      <label for="password">Password</label>
      <input
        type="password"
        class="form-control"
        required
        placeholder="Enter The Password: "
        style="border-radius: 10px;border-color: #FC6011;"
        name="password"
      />
    </div>
    <div class="mb-6">
      <button
        type="submit"
        class="btn btn-block text-uppercase"
        style="background-color: #FC6011;font-size: 24px;color: white;border-color: #FC6011;margin-top: 20px;"
      >
        SUBMIT
      </button>
    </div>
  </form>
</div>